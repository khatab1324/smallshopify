<% layout('layout/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Marck+Script&family=Playfair+Display:ital,wght@1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <style>
      .container {
        font-family: "Marck Script", cursive;
        font-family: "Playfair Display", serif;
      }
    </style>
  </head>
  <body>
    <div class="container py-5">
      <div class="row mb-4">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-6">Edit Product</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6 mx-auto">
          <div class="card">
            <div class="card-header">
              <form
                method="POST"
                action="/store/product/<%= product.id %>/edit"
                class="validated-form needs-validation"
                enctype="multipart/form-data"
                novalidate
              >
                <div class="row d-flex justify-content-center">
                  <div class="col-sm-6 text-center">
                    <label for="title">
                      <h6>Title</h6>
                    </label>
                    <input
                      type="text"
                      name="title"
                      value="<%= product.title %>"
                      class="form-control"
                      style="
                        border-left: none;
                        border-top: none;
                        border-right: none;
                        background-color: rgba(255, 255, 255, 0.01);
                        border-radius: 0;
                      "
                      placeholder="Enter the new title"
                      required
                    />
                  </div>
                </div>

                <div class="row mt-4">
                  <div class="col-sm-6">
                    <label for="quantity">
                      <h6>Quantity</h6>
                    </label>
                    <input
                      type="number"
                      placeholder="Enter the new quantity"
                      name="quantity"
                      id="quantity"
                      class="form-control"
                      value="<%= product.quantity %>"
                      required
                    />
                  </div>
                  <div class="col-sm-6">
                    <label for="price">
                      <h6>Price</h6>
                    </label>
                    <input
                      type="number"
                      id="price"
                      name="price"
                      placeholder="Enter the new price"
                      value="<%= product.price %>"
                      class="form-control"
                      required
                    />
                  </div>
                </div>

                <div class="row mt-4">
                  <div class="col-sm-6">
                    <label for="description">
                      <h6>Description</h6>
                    </label>
                    <input
                      type="text"
                      name="description"
                      class="form-control mt-2"
                      style="
                        border-left: none;
                        border-top: none;
                        border-right: none;
                        background-color: rgba(255, 255, 255, 0.01);
                        border-radius: 0;
                      "
                      value="<%= product.description %>"
                      placeholder="Enter the new description"
                      required
                    />
                  </div>
                  <div class="col-sm-6 mt-2">
                    <label for="images">
                      <h6>Update Image</h6>
                    </label>
                    <input
                      type="file"
                      name="images"
                      class="form-control mt-3"
                      style="
                        border-left: none;
                        border-top: none;
                        border-right: none;
                        background-color: rgba(255, 255, 255, 0.01);
                        border-radius: 0;
                      "
                      multiple
                    />
                  </div>
                </div>

                <div class="row mt-5">
                  <div class="col-sm-12 d-flex justify-content-center">
                    <button class="subscribe btn btn-dark btn-block shadow-sm">
                      Update Product
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      (function () {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll(".needs-validation");

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
