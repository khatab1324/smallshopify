<% layout('layout/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      /* Reset default margin and padding */
      body,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p {
        margin: 0;
        padding: 0;
      }

      /* Set a background color and font for the whole page */
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        background-image: linear-gradient(
            rgba(0, 0, 0, 0.5),
            rgba(0, 0, 0, 0.5)
          ),
          url("https://cdn.techjuice.pk/wp-content/uploads/2019/07/online-shopping.jpg");
        background-size: cover;
        background-position: center;
      }

      .container1 {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffffcb;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 2%;
      }

      .user-info,
      .store-info {
        margin-bottom: 20px;
      }

      h3 {
        font-size: 1.2rem;
        margin-bottom: 10px;
      }

      label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
      }

      input[type="file"] {
        padding: 0;
        border: none;
        background-color: transparent;
      }

      .form-file-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
      }

      /* Style the submit button */

      /* Add some responsiveness */
      @media screen and (max-width: 380px) {
        .container1 {
          padding: 10px;
        }
      }
    </style>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/home.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
    />
  </head>
  <body>
    <div
      class="container1 d-flex justify-content-center align-items-center mt-5"
    >
      <form
        method="POST"
        action="/create-store"
        class="validated-form needs-validation"
        enctype="multipart/form-data"
        novalidate
      >
        <div class="store-info">
          <h3>create your store</h3>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="title"
              id="title"
              placeholder="title"
              required
            />
          </div>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="location"
              id="location"
              placeholder="enter your location if you have one"
              required
            />
          </div>
          <div class="input-group mb-3">
            <input
              class="form-control"
              type="text"
              name="description"
              id="description"
              placeholder="description"
              required
            />
          </div>
          <div class="mb-3">
            <div class="form-file custom-file">
              <input
                type="file"
                class="form-file-input"
                id="images"
                name="images"
                multiple
              />
              <label class="form-file-label" for="image">
                <span class="form-file-text custom-file-label"
                  >Choose image(s)...</span
                >
                <span class="form-file-button">Browse</span>
              </label>
            </div>
          </div>
          <div class="row">
            <div class="form-group mb-4 col-6">
              <label
                data-toggle="tooltip"
                title="this pin for your store , you will use it for ubdate and delete your store"
              >
                <h6>PIN <i class="fa fa-question-circle d-inline"></i></h6>
              </label>
              <input
                type="password"
                id="pin"
                name="pin"
                required
                class="form-control"
              />
            </div>
            <div class="form-group mb-4 col-6">
              <label>
                <h6>config PIN</h6>
              </label>
              <input
                type="password"
                id="pin"
                name="pinConfig"
                required
                class="form-control"
              />
            </div>
          </div>
        </div>
        <button class="btn btn-outline-dark justify-content-md-end">
          bay 10$
        </button>
      </form>
    </div>
    <%-include("../partials/script")%>
    <script>
      $(function () {
        $('[data-toggle="tooltip"]').tooltip();
      });

      (function () {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll(".needs-validation");

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
